{
  "name": "@lucra-sports/lucra-react-native-sdk",
  "version": "0.0.0",
  "description": "Lucra React Native SDK",
  "main": "lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json",
    "./app.plugin.js": "./app.plugin.js"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "plugin",
    "app.plugin.js",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prettier:fix": "prettier --write .",
    "prepack": "bob build && yarn build-plugin",
    "example": "yarn workspace example",
    "prepare": "bob build",
    "build-plugin": "tsc -p ./plugin/tsconfig.json",
    "prepublishOnly": "yarn run build-plugin"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/Lucra-Sports/lucra-react-native-sdk.git"
  },
  "author": "Lucra <dev@lucrasports.com> (https://github.com/Lucra-Sports)",
  "license": "UNLICENSED",
  "homepage": "https://lucrasports.com/",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "workspaces": [
    ".",
    "example",
    "example-expo"
  ],
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@expo/config-plugins": "54.0.1",
    "@react-native-community/cli": "20.0.1",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/eslint-config": "^0.81.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.0",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-native": "0.81.1",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^19.0.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/example-expo/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "LucraClientSpec",
    "type": "all",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.lucrasdk"
    },
    "ios": {
      "moduleProvider": {
        "LucraClient": "LucraClient"
      },
      "componentProvider": {
        "LucraContestCard": "LucraContestCard",
        "LucraCreateContestButton": "LucraCreateContestButton",
        "LucraFlowView": "LucraFlowView",
        "LucraMiniPublicFeed": "LucraMiniPublicFeed",
        "LucraProfilePill": "LucraProfilePill",
        "LucraRecommendedMatchup": "LucraRecommendedMatchup"
      }
    }
  },
  "packageManager": "yarn@3.6.1",
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.54.3"
  }
}
