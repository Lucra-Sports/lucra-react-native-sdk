{
  "name": "@lucra-sports/lucra-react-native-sdk",
  "version": "0.0.0",
  "description": "Lucra React Native SDK",
  "main": "lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json",
    "./app.plugin.js": "./app.plugin.js"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "plugin",
    "app.plugin.js",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prettier:fix": "prettier --write .",
    "prepack": "bob build && yarn build-plugin",
    "example": "yarn workspace example",
    "prepare": "bob build",
    "build-plugin": "tsc -p ./plugin/tsconfig.json",
    "prepublishOnly": "yarn run build-plugin"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/Lucra-Sports/lucra-react-native-sdk.git"
  },
  "author": "Lucra <dev@lucrasports.com> (https://github.com/Lucra-Sports)",
  "license": "UNLICENSED",
  "homepage": "https://lucrasports.com/",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "workspaces": [
    "example"
  ],
  "dependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@expo/config-plugins": "8.0.10",
    "@react-native-community/cli": "18.0.1",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "^0.78.0",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.3.3",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-builder-bob": "^0.40.11",
    "react-native-css-interop": "^0.1.20",
    "react-native-reanimated": "^3.17.5",
    "react-native-safe-area-context": "^4.12.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/example-expo/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "resolutions": {
    "@types/react": "^18.2.44",
    "glob@^10.0.0": "10.5.0",
    "js-yaml@^3.13.1": "3.14.2",
    "js-yaml@^4.1.0": "4.1.1",
    "tar@^7.4.3": "7.5.8"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "LucraClientSpec",
    "type": "all",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.lucrasdk"
    },
    "ios": {
      "componentProvider": {
        "LucraContestCard": "LucraContestCard",
        "LucraCreateContestButton": "LucraCreateContestButton",
        "LucraFlowView": "LucraFlowView",
        "LucraMiniPublicFeed": "LucraMiniPublicFeed",
        "LucraProfilePill": "LucraProfilePill",
        "LucraRecommendedMatchup": "LucraRecommendedMatchup"
      }
    }
  },
  "packageManager": "yarn@3.6.1",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "plugins": [
      "eslint-plugin-prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "plugin/build/",
    "**/*.js"
  ],
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.50.3"
  }
}
